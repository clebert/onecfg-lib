{
  "defines": {
    "tsconfig.base.json": {"format": "json"},
    "tsconfig.json": {"format": "json"}
  },
  "patches": {
    "tsconfig.base.json": [
      {
        "value": {
          "compilerOptions": {
            "allowUnreachableCode": false,
            "allowUnusedLabels": false,
            "noFallthroughCasesInSwitch": true,
            "noImplicitOverride": true,
            "noImplicitReturns": true,
            "noUncheckedIndexedAccess": true,
            "noUnusedLocals": true,
            "noUnusedParameters": true,
            "strict": true,
            "module": "node16",
            "moduleResolution": "node16",
            "verbatimModuleSyntax": true,
            "esModuleInterop": true,
            "forceConsistentCasingInFileNames": true,
            "isolatedModules": true,
            "jsx": "react",
            "target": "es2022",
            "noErrorTruncation": true,
            "pretty": true
          }
        },
        "priority": -1
      }
    ],
    "tsconfig.json": [
      {
        "value": {
          "extends": ["./tsconfig.base.json"],
          "include": ["**/*"],
          "compilerOptions": {
            "resolveJsonModule": true,
            "noEmit": true,
            "checkJs": true
          }
        },
        "priority": -1
      }
    ],
    "jest.config.json": [
      {
        "value": {
          "extensionsToTreatAsEsm": [".ts", ".tsx"],
          "moduleFileExtensions": [
            "js",
            "mjs",
            "cjs",
            "cts",
            "jsx",
            "ts",
            "tsx",
            "json",
            "node"
          ],
          "moduleNameMapper": {"^(\\.{1,2}/.*)\\.c?js$": "$1"},
          "transform": {"^.+\\.cts$": "@swc/jest", "^.+\\.tsx?$": "@swc/jest"}
        }
      },
      {
        "value": {"testMatch": ["**/src/**/*.test.{cts,ts,tsx}"]},
        "array_merge": "replace"
      }
    ],
    ".prettierignore": [
      {
        "value": ["/tsconfig.base.json", "/tsconfig.json"]
      }
    ],
    ".swcrc": [
      {
        "value": {"jsc": {"parser": {"syntax": "typescript", "tsx": true}}}
      }
    ],
    ".vscode/settings.json": [
      {
        "value": {
          "editor.codeActionsOnSave": {"source.addMissingImports": true},
          "files.exclude": {"tsconfig.base.json": true, "tsconfig.json": true},
          "typescript.tsdk": "node_modules/typescript/lib"
        }
      }
    ]
  }
}
