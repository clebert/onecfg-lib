{
  "patches": {
    ".github/workflows/ci.yml": [
      {
        "value": {
          "on": {"release": {"types": ["published"]}},
          "jobs": {
            "CI": {
              "steps": [
                {
                  "if": "${{ github.event_name == 'release' }}",
                  "env": {"NPM_AUTH_TOKEN": "${{ secrets.NPM_AUTH_TOKEN }}"},
                  "run": "npm config set //registry.npmjs.org/:_authToken $NPM_AUTH_TOKEN"
                },
                {
                  "if": "${{ github.event_name == 'release' }}",
                  "run": "npm publish"
                }
              ]
            }
          }
        }
      }
    ]
  }
}
